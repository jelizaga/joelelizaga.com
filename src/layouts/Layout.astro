---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	currentPage?: string;
	headerShadow?: boolean;
	footerShadow?: boolean;
}

const { title, currentPage, headerShadow, footerShadow } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Joel Elizaga, joel@elizaga.org" />
		<link rel="icon" type="image/x-icon" href="/img/favicon/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://kit.fontawesome.com/b7534bed10.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<Header
			currentPage={currentPage}
			headerShadow={headerShadow}
		/>
		<slot />
		<Footer
			footerShadow={footerShadow}
		/>
	</body>
</html>