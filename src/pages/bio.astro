---
////////////////////////////////////////////////////////////////////////////////
// /src/pages/bio.astro ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////
// Bio page @ `/bio`.

import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import Marquee from '../components/Marquee.astro';
import Tooltip from '../components/Tooltip.astro';
import HyperlinkButtons from '../components/HyperlinkButtons.astro';
---

<Layout 
	title="Joel Elizaga | Bio"
	currentPage={"bio"}
>
	<article class="bio">
		<div class="hyperlink-sidebar">
			<HyperlinkButtons
				buttons={[
					{
						href: "/doc/joel_elizaga_resume.pdf",
						target: "_blank",
						icon: "fa-solid fa-file-pdf",
						tooltipContent: "Resume",
						tooltipId: "bio-resume-tooltip"
					},
					{
						href: "https://linkedin.com/in/joel-elizaga",
						target: "_blank",
						icon: "fa-brands fa-linkedin",
						tooltipContent: "LinkedIn",
						tooltipId: "bio-linkedin-tooltip"
					},
					{
						href: "https://github.com/jelizaga",
						target: "_blank",
						icon: "fa-brands fa-github",
						tooltipContent: "GitHub",
						tooltipId: "footer-github-tooltip"
					},
					{
						popup: "ContactPopup",
						icon: "fa-solid fa-envelope",
						tooltipContent: "Contact",
						tooltipId: "footer-contact-tooltip"
					}
				]}	
				buttonDirection={"column"}
				tooltipPosition={"left"}
				display={"flat"}
			/>
		</div>
		<section>
			<div class="content">
				<h1>
					Hey there!
				</h1>
				<p>
					I'm <b>Joel</b>. I'm a <code>UX engineer</code>: I practice at the noisy intersection of 
					human-computer interaction and development.
				</p>
				<p>
					I've worked on numerous projects for large corporate clients, including
					Intel, T-Mobile, PwC, and the (admittedly non-corporate) city of
					Providence, RI as a <b>UX designer</b> at
					<a href="https://infosys.com">Infosys Ltd.</a>
				</p>
			</div>
			<div class="illustration">
				<img
					src="/img/placeholder/placeholder1.jpg"
				>
			</div>
		</section>
		<section>
			<div class="content">
				<p>
					I served a year in 
					<a href="https://americorps.gov" target="_blank">AmeriCorps NCCC</a>
					prior to my work as a UX designer.
				</p>
				<p>
					My team worked a bevvy of service projects supporting non-profits
					across the southwestern United States:
				</p>
				<p>
					I built trails in the Sonoran Desert, did a little deforestation and
					infrastructure-building for an agritherapy retreat for veterans and gold 
					star families in Taos, and led volunteer groups on landscaping and
					hurricane recovery projects for senior citizens of the Third Ward in 
					Houston.
				</p>
			</div>
			<div class="illustration">
				<img
					src="/img/placeholder/placeholder2.jpg"
				/>
			</div>
		</section>
		<section>
			<div class="content">
				<p>
					I studied 
					<a 
						href="https://ischool.uw.edu/programs/informatics"
						target="_blank"
					><b>informatics</b></a>
					with a focus in <em>human-computer interaction</em> (HCI) at the 
					<a 
						href="https://en.wikipedia.org/wiki/University_of_Washington"
						target="_blank"
					>University of Washington</a>,
					graduating with my bachelor of science in 2017.
				</p>
			</div>
			<div class="illustration">
				<img
					src="/img/placeholder/placeholder3.jpg"
				/>
			</div>
		</section>
		<section>
			<div class="content">
				<p>
					While studying at UW I interned as a video producer at
					<a href="https://answerdash.com" target="_blank">AnswerDash</a>, a
					SaaS startup founded by professors of the informatics department.
				</p>
			</div>
			<div class="illustration">
				<img
					src="/img/placeholder/placeholder4.jpg"
				/>	
			</div>
		</section>
		<section>
			<div class="content">

			</div>
			<div class="illustration">
				<img
					src="/img/placeholder/placeholder5.jpg"
				/>
			</div>
		</section>
	</article>
</Layout>

<style>

	.bio {
		height: 100vh;
		margin: 0;
		overflow-y: scroll;
		scroll-snap-type: y mandatory;
		width: 100vw;
	}

	.bio .hyperlink-sidebar {
		background-color: var(--tahoma_white_dim);
		display: block;
		height: 100%;
		position: absolute;
		right: 0;
	}

	.bio .hyperlink-sidebar .hyperlink-buttons {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.bio section {
		display: grid;
		grid-template-columns: var(--vw_golden_ratio_small) var(--vw_golden_ratio_big);
		grid-template-areas:
			"content illustration";
		min-height: 100vh;
		scroll-snap-align: start;
	}

	.bio section .content {
		grid-area: content;
		padding-bottom: 1rem;
		padding-left: 3rem;
		padding-right: 3rem;
		padding-top: 1rem;
	}

	.bio section .illustration {
		grid-area: illustration;
		overflow: hidden;
	}

	.bio section .illustration img {
		min-height: 100%;
		min-width: 100%;
		object-fit: cover;
	}

	@media screen and (max-width: 1130px) {
		.bio section {
			grid-template-columns: auto;
			grid-template-rows: var(--vh_golden_ratio_big) auto;
			grid-template-areas: 
				"illustration"
				"content";
		}
	}

</style>