---
import FooterBadge from './FooterBadge.astro';
import HyperlinkButtons from './HyperlinkButtons.astro';

export interface Props {
  footerShadow?: boolean;
}
const { footerShadow } = Astro.props as Props;

const footerClasses = footerShadow ? "footer-shadowed" : "";
---

<footer class={footerClasses}>
  <HyperlinkButtons
    buttons={[
      {
        href: "/#contact",
        icon: "fa-solid fa-envelope",
        target: "_self",
        tooltipContent: "Contact",
        tooltipId: "footer-contact-tooltip"
      },
      {
        href: "https://github.com/jelizaga",
        target: "_blank",
        icon: "fa-brands fa-github",
        tooltipContent: "GitHub",
        tooltipId: "footer-github-tooltip"
      },
      {
        href: "https://linkedin.com/in/joel-elizaga",
        target: "_blank",
        icon: "fa-brands fa-linkedin",
        tooltipContent: "LinkedIn",
        tooltipId: "footer-linkedin-tooltip"
      },
      {
        href: "/doc/joel_elizaga_resume.pdf",
        icon: "fa-solid fa-file-pdf",
        tooltipContent: "Resume",
        tooltipId: "footer-resume-tooltip"
      }
    ]}
  />
</footer>