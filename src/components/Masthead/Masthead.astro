---
import MastheadNav from './MastheadNav.astro';
import Button from '../Button/Button.astro';

interface Props {
  current?: string
}

const {
  current
} = Astro.props as Props;
---

<header
  class="masthead"
>
  <MastheadNav
    current={current}
  />
  <Button
    href="/#contact"
    label="Contact"
    icon="fa-solid fa-envelope"
    fontSize="c5-2"
  />
</header>

<style>
  header.masthead {
    background-color: var(--tahoma_white_dim);
    border-bottom-left-radius: 2.5rem;
    border-bottom-right-radius: 2.5rem;
    box-shadow: var(--shadow_ceiling);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    left: 0;
    padding-bottom: 0.75rem;
    padding-left: var(--grid_margin);
    padding-right: var(--grid_margin);
    padding-top: 0.75rem;
    position: absolute;
    right: 0;
    z-index: 4;
  }

  @media screen and (max-width: 750px) {

    header.masthead {
      padding-left: var(--grid_margin_min);
      padding-left: var(--grid_margin_min);
    }

  }
</style>