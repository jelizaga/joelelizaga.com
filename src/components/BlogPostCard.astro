---
export interface Props {
	slug: string;
	title: string;
	description: string;
	img: string;
	date: string;
	tags?: string;
}

const { 
	slug, 
	title,
	description,
	img,
	date,
	tags
} = Astro.props as Props;
---

<li class="blog-post-card noonoo-protruding-card">
	<a href={slug}>
		<div class="blog-post-card-img">
			<img src={img}>
		</div>
		<div class="blog-post-card-details">
			<h4>{title}</h4>
			<p class="subheading">{new Date(date).toLocaleDateString()}</p>
			<p>{description}</p>
		</div>
	</a>
</li>
