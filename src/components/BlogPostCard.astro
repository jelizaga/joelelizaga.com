---
import Tooltip from './Tooltip.astro';

export interface Props {
	slug: string;
	title: string;
	description: string;
	img: string;
	date: string;
	tags?: string[];
}

const { 
	slug, 
	title,
	description,
	img,
	date,
	tags
} = Astro.props as Props;
---

<li class="blog-post-card noonoo-protruding-card">
	<a href={slug}>
		<div class="blog-post-card-img">
			<img src={img}>
		</div>
		<div class="blog-post-card-details">
			<h4>{title}</h4>
			<p class="subheading">{new Date(date).toLocaleDateString()}</p>
			<p>{description}</p>
			{tags &&
				<ul class="tags">
					{tags.map((tag) =>
						<li class="tag">
							{tag}
						</li>
					)}	
				</ul>	
			}
		</div>
	</a>
</li>

<style>

	.blog-post-card {
		background-color: var(--tahoma_white_dim);
		border-radius: 1.4rem;
		box-shadow: var(--noonoo_protrusion_bright);
		display: block;
		overflow: hidden;
		width: 100%;
	}

	.blog-post-card a {
		display: grid;
		border-radius: 1.4rem;
		grid-template-columns: 38.197% auto;
		overflow: hidden;
		height: inherit;
		width: inherit;
	}

	.blog-post-card-img {
		overflow: hidden;
	}

	.blog-post-card-img img { 
		height: 100%;
		object-fit: cover;
		transition: height 0.2s;
	}

	.blog-post-card-details h4 {
		color: var(--lawetlatla_ash_dim);
		transition: color 0.1s, text-shadow 0.1s;
	}

	.blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	.blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
	}

	a .blog-post-card-details {
		text-decoration: none;
		text-shadow: none;
		padding-bottom: 1rem;
		padding-left: 2rem;
		padding-right: 2rem;
		padding-top: 1rem;
	}

	a:visited .blog-post-card-details h4 {
		color: var(--lawetlatla_ash_dim);
	}

	a:visited .blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
	}

	a:visited .blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	a:hover .blog-post-card-details h4 {
		color: var(--spectacular_red_bright);
		text-shadow: var(--spectacular_red_glowing);
	}

	a:hover .blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	a:hover .blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
		text-shadow: none;
	}

	a:hover .blog-post-card-img img {
		height: 102%;
	}

	@media screen and (max-width: 750px) {

		.blog-post-card a {
			grid-template-columns: auto;
		}

	}

</style>
