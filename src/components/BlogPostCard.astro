<style>
	a .blog-post-card {
		text-decoration-line: none;
	}

	.blog-post-card {
		background-color: var(--tahoma_white_dim);
		box-shadow: var(--noonoo_protrusion_bright);
		display: block;
		overflow: hidden;
		width: 100%;
	}

	.blog-post-card a {
		display: grid;
		border-radius: 44px;
		grid-template-columns: 38.197% auto;
		overflow: hidden;
		height: inherit;
		width: inherit;
	}

	.blog-post-card-img img { 
		height: 100%;
		object-fit: cover;
		transition: height 0.2s;
	}

	.blog-post-card-details h4 {
		color: var(--lawetlatla_ash_dim);
		transition: color 0.1s, text-shadow 0.1s;
	}

	.blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	.blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
	}

	a .blog-post-card-details {
		text-decoration: none;
		padding-bottom: 1rem;
		padding-left: 2rem;
		padding-right: 2rem;
		padding-top: 1rem;
		text-shadow: none;
	}

	a:visited .blog-post-card-details h4 {
		color: var(--lawetlatla_ash_dim);
	}

	a:visited .blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
	}

	a:visited .blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	a:hover .blog-post-card-details h4 {
		color: var(--spectacular_red_bright);
		text-shadow: var(--spectacular_red_glowing);
	}

	a:hover .blog-post-card-details .subheading {
		color: var(--lawetlatla_ash_bright);
	}

	a:hover .blog-post-card-details p {
		color: var(--lawetlatla_ash_dim);
		text-shadow: none;
	}

	a:hover .blog-post-card-img img {
		height: 102%;
	}
</style>
