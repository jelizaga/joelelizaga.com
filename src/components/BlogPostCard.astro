---
export interface Props {
	slug: string;
	title: string;
	description: string;
	img: string;
	date: string;
	tags?: string;
}

const { 
	slug, 
	title,
	description,
	img,
	date,
	tags
} = Astro.props as Props;
---

<a href={slug}>
	<li class="blog-post-card">
		<img src={img}>
		<div class="blog-post-card-details">
			<h4>{title}</h4>
			<p class="caption">{new Date(date).toLocaleDateString()}</p>
			<p>{description}</p>
		</div>
	</li>
</a>

<style>
	.blog-post-card {
		background-color: var(--tahoma_white_dim);
		border-radius: 44px;
		box-shadow: var(--noonoo_protrusion_bright);
		display: flex;
		flex-direction: row;
		width: 100%;
	}
</style>
