---
import NNImage from "./NNImage.tsx";
import Marquee from "./Marquee.astro";
import HeaderBar from "./HeaderBar.astro";
---

<div class="value-prop" id="what-can-i-do-for-you">
  <h2>
    <i class="fa-solid fa-hat-wizard"></i>
    What can I do for you?
  </h2>
	<Marquee
		iconMarquee={true}
		icons={[
			"devicon-javascript-plain",
			"devicon-typescript-plain",
			"devicon-css3-plain",
			"devicon-html5-plain",
			"devicon-nodejs-plain",
			"devicon-react-plain",
			"devicon-express-original",
			"devicon-mongodb-plain",
			"devicon-graphql-plain",
			"devicon-java-plain",
			"devicon-nginx-plain",
			"devicon-git-plain",
			"devicon-linux-plain",
			"devicon-bash-plain",
			"devicon-markdown-plain",
      "devicon-python-plain",
      "devicon-vscode-plain",
      "devicon-vim-plain",
      "devicon-debian-plain",
      "devicon-ubuntu-plain",
      "devicon-jira-plain",
			"devicon-figma-plain",
      "devicon-xd-plain",
      "devicon-premierepro-plain",
      "devicon-sketch-line"
		]}
		direction={"right"}
		margin={false}
		straightCorners={true}
	/>
  <div class="content">
    <div class="text">
      <p><em>Great question!</em> I can:</p>
      <ul class="custom-bullets no-indent">
        <li class="fa-gear">
          <b class="blue">
            Develop
          </b> 
          existing designs with front-end flair and UX-informed
          care,
        </li>
        <li class="fa-lightbulb">
          <b class="green">
            Design
          </b> 
          components, experiences, and tools according to
          cognitive heuristics and well-considered rules,
        </li>
        <li class="fa-earth-americas">
          <b class="red">
            Collaborate
          </b> 
          with ease in cross-disciplinary teams (heyâ€”that one rhymed!).
        </li>
      </ul>
      <div class="mobile-diagram">
        <NNImage
          client:load
          src={"/img/diagram/practice-diagram.svg"}
          alt={"Conceptual diagram of Joel's UX engineering practice."}
          display={"flat"}
          transparentBackground={true}
        />
      </div>
    </div>
    <div class="diagram">
      <NNImage
        client:load
        src={"/img/diagram/practice-diagram.svg"}
        alt={"Conceptual diagram of Joel's UX engineering practice."}
        display={"flat"}
        transparentBackground={true}
      />
    </div>
  </div>
  <div class="circle circle-1"></div>
  <div class="circle circle-2"></div>
  <div class="circle circle-3"></div>

  <div class="top-right-circles">
    <div class="circle circle-4"></div>
    <div class="circle circle-5"></div>
    <div class="circle circle-6"></div>
    <div class="circle circle-7"></div>
    <div class="circle circle-8"></div>
    <div class="circle circle-9"></div>
  </div>
</div>

<style>
  div.circle.circle-1,
  div.circle.circle-2,
  div.circle.circle-3,
  div.circle.circle-4,
  div.circle.circle-5,
  div.circle.circle-6 {
    transition: 0.3s height, 0.3s width;
  }

  .top-right-circles .circle {
    display: none;
    visibility: hidden;
  }

  div.circle.circle-1 {
    background-color: var(--spectacular_red_bright);
    bottom: -1rem;
    height: 3.5rem;
    left: -2.2rem;
    position: absolute;
    width: 3.5rem;
    z-index: 0;
  }

  div.circle.circle-2 {
    background-color: var(--whulge_blue_bright);
    bottom: 0rem;
    height: 6rem;
    left: -7rem;
    position: absolute;
    width: 6rem;
    z-index: 0;
  }

  div.circle.circle-3 {
    background-color: var(--rain_city_emerald_bright);
    bottom: 7rem;
    height: 3rem;
    left: -5rem;
    position: absolute;
    width: 3rem;
    z-index: -1;
  }

  div.circle.circle-4 {
    background-color: var(--rain_city_emerald_bright);
    height: 6rem;
    position: absolute;
    top: -3rem;
    right: -4rem;
    width: 6rem;
    z-index: 1;
  }

  div.circle.circle-5 {
    background-color: var(--spectacular_red_bright);
    height: 3rem;
    position: absolute;
    top: 1rem;
    right: -1rem;
    width: 3rem;
    z-index: 1;
  }

  div.circle.circle-6 {
    background-color: var(--golden_hour_sunburst_bright);
    height: 2.8rem;
    position: absolute;
    top: -4rem;
    right: 1rem;
    width: 2.8rem;
    z-index: 2;
  }
  
  div.circle.circle-7 {
    background-color: var(--whulge_blue_bright);
    height: 2rem;
    position: absolute;
    top: -1rem;
    right: 4rem;
    width: 2rem;
    z-index: 2;
  }

  div.circle.circle-8 {
    background-color: var(--jellyfish_cyan_bright);
    height: 1.8rem;
    position: absolute;
    top: -5rem;
    right: -4rem;
    width: 1.8rem;
    z-index: 2;
  }

  div.circle.circle-9 {
    background-color: var(--rhododendron_magenta_bright);
    height: 1.4rem;
    position: absolute;
    top: 2rem;
    right: -3.5rem;
    width: 1.4rem;
    z-index: -1;
  }

  .value-prop {
    border-radius: 2.7rem;
    box-shadow: var(--noonoo_protrusion_bright);
    position: relative;
    margin-bottom: 1rem;
    margin-left: auto;
    margin-right: auto;
    margin-top: 1rem;
    width: var(--vw_golden_ratio_big);
  }

  .value-prop h2 {
    padding-bottom: 0.5rem;
    padding-left: 3rem;
    padding-right: 3rem;
    padding-top: 0.5rem;
  }

  .value-prop .content {
    padding-bottom: 1rem;
    padding-left: 3rem;
    padding-right: 3rem;
    padding-top: 1rem;
  }

  .value-prop .content .text {
    grid-area: text;
  }

  .value-prop .content .diagram {
    position: absolute;
    top: -6rem;
    right: -8rem;
    width: 14rem;
    z-index: 2;
  }

  .value-prop .content .text .mobile-diagram {
    display: none;
    visibility: hidden;
  }

  .value-prop .content .diagram {
    visibility: visible;
  }

  @media screen and (max-width: 930px) {

    .value-prop .content .diagram {
      display: none;
      visibility: hidden;
    }

    .value-prop .content .text .mobile-diagram {
      display: block;
      visibility: visible;
    }

    .top-right-circles .circle {
      display: block;
      visibility: visible;
    }

  }

  @media screen and (max-width: 770px) {

    div.circle.circle-1,
    div.circle.circle-2,
    div.circle.circle-3 {
      height: 0;
      width: 0;
    }

  }

  @media screen and (max-width: 750px) {
    .value-prop {
      width: var(--almost_full_width);
    }
  }

</style>