---
// PaginationEllipsis //////////////////////////////////////////////////////////

export interface Props {
  page?: number;
  pageCurrent?: boolean;
  ellipsis?: boolean;
}

const { page, pageCurrent = false, ellipsis = false } = Astro.props;

---

{pageCurrent ?
  <li class="current-page inactive">
    <a>{page}</a>
  </li>
  :
  <li class="page">
    <a href={page}>
      {page}
    </a>
  </li>
}

{ellipsis &&
  <li class="page inactive">
    <i class="fa-solid fa-ellipsis"></i>
  </li>
}

<style>
  .page, .current-page {
    background-color: var(--noonoo_protrusion_rounded_bright);
    border-radius: 1rem;
    height: 1.5rem;
    text-align: center;
    vertical-align: middle;
    width: 1.5rem;
    transition: box-shadow ease-in 0.1s;
  }

  .page:active {
    box-shadow: var(--noonoo_depression_bright);
  }

  .page a, .current-page a {
    display: inline-block;
    height: inherit;
    width: inherit;
  }

  .page a {
    color: var(--lawetlatla_ash_dim);
  }

  .current-page {
    box-shadow: var(--noonoo_depression_bright);
  }

  .inactive {
    color: var(--lawetlatla_ash_bright);
    cursor: default;
  }
</style>