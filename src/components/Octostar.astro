---
////////////////////////////////////////////////////////////////////////////////
// Octostar.astro //////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

export interface Props {
  color?: string;
  spin?: string;
  spinDirection?: string;
}

const {
  color = "spectacular-red-bright",
  spin,
  spinDirection = "clockwise"
} = Astro.props as Props;

let octostarClasses = "octostar";
// Classes /////////////////////////////////////////////////////////////////////
switch (color) {
  case "spectacular-red-bright":
    octostarClasses += " spectacular-red-bright";
    break;
}
switch (spin) {
  case "40":
    octostarClasses += " animated spin-40";
    break;
  case "60":
    octostarClasses += " animated spin-60";
    break;
  case "120":
    octostarClasses += " animated spin-120";
    break;
  case "360":
    octostarClasses += " animated spin-360";
    break;
}
switch (spinDirection) {
  case "clockwise":
    octostarClasses += " clockwise";
    break;
  case "counterclockwise":
    octostarClasses += " counterclockwise";
    break;
}
