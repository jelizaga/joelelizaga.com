---
export interface Props {
  currentPage?: string;
}
const { currentPage } = Astro.props as Props;
// Determine classes of `Nav` items:
let bioClasses = "";
let blogClasses = "";
switch(currentPage) {
  case "bio":
    bioClasses += "selected";
    break;
  case "blog":
    blogClasses += "selected";
    break;
}
---

<nav>
  <ul>
    <li class={bioClasses}>
      <a href="/bio">
        <span>Bio</span>
      </a>
    </li>
    <li class={blogClasses}>
      <a href="/blog">
        <span>Blog</span>
      </a>
    </li>
  </ul>
</nav>

<style>
  nav ul {
    display: flex;
    gap: 0.25rem;
    justify-content: start;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  nav ul a, nav ul a:visited {
    color: var(--lawetlatla_ash_dim);
  }

  nav ul a:hover {
    color: var(--spectacular_red_bright);
  }

  nav ul li {
    display: inline-block;
    font-weight: bold;
    padding-bottom: 0.5rem;
    padding-top: 0.5rem;
  }

  nav ul li a {
    display: inline-block;
    height: inherit;
    width: inherit;
  }

  .selected, .selected:visited {
    color: var(--lawetlatla_ash_bright);
  }

  .selected:hover {
    color: var(--spectacular_red_bright);
  }

  nav ul li a span:active {
    box-shadow: var(--noonoo_depression_bright);
  }

  nav ul li span {
    border-radius: 44px;
    padding-bottom: 0.3rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.3rem;
    transition: box-shadow ease-in 0.1s;
  }

  .selected span {
    box-shadow: var(--noonoo_depression_bright);
  }
</style>