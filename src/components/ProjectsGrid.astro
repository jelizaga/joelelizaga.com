---
import ProjectCard from "./ProjectCard.astro";

export interface Props {
  projects?: object[];
  columns?: number;
  limit?: number;
}

const {
  projects = (await Astro.glob("../project/*.mdx")),
  columns = 2,
  limit
} = Astro.props as Props;

const nonDraftProjects = projects.filter((project) => !project.frontmatter.draft);
let projectsGridClasses = "projects-grid";
if (columns == 1) {
  projectsGridClasses += " one-col";
}
---

<div id="projects" class="projects">
  <ul class={projectsGridClasses}>
    {nonDraftProjects.map(project => (
      <ProjectCard
        slug={`/project/${project.frontmatter.slug}`}
        title={project.frontmatter.title}
        description={project.frontmatter.description}
        img={project.frontmatter.img}
        tags={project.frontmatter.tags}
      />
    ))}
  </ul>
</div>

<style>
  .projects-grid {
    column-gap: 1rem;
    row-gap: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    list-style: none;
    margin: 0;
    padding: 0;
    row-gap: 1rem;
  }

  .one-col {
    grid-template-columns: 1fr;
  }

  @media screen and (max-width: 900px) {

    .projects-grid {
      grid-template-columns: auto;
    }

  }
</style>