---
import { Debug } from 'astro:components';
import BlogPostItem from "./BlogPostItem.astro";

interface Props {
  blogPosts: Object[];
}

const {
  blogPosts,
} = Astro.props as Props;
---

<ul
  class="blog-index"
>
  {blogPosts.map(blogPost => (
    <BlogPostItem
      title={blogPost.data.title} 
      description={blogPost.data.description}
      headerImgSrc={blogPost.data.headerImgSrc}
      tags={blogPost.data.tags}
      pubDate={blogPost.data.pubDate}
      slug={blogPost.slug}
    />
  ))}
</ul>

<style>
  ul.blog-index {
    display: flex;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
    padding: 0;
    width: calc(100vw - var(--grid_margin) - var(--grid_margin));
  }
</style>